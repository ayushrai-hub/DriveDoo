def in_one_step_palindrome(s):
    def is_palindrome_range(i, j):
        return all(s[k] == s[j-k+1] for k in range(i, j//2))
    for i in range(len(s) // 2):
        if s[i] != s[-i-1]:
            j = len(s) - 1 - i
            return
        
    is_palindrome_range(i+1, j)
    is_palindrome_range(i, j-1)
    return True
      
input_string = "rapcar"
print(in_one_step_palindrome(input_string))